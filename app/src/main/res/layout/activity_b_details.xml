<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground"
    tools:context=".Activities.BDetailsActivity">

    <RelativeLayout
        android:id="@+id/topRV"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/babyDIV"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/babyNameDTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textColor="@color/textcolorlite"
            android:layout_toRightOf="@+id/babyDIV"
            android:text="Ali Khan"
            android:textStyle="bold"
            android:textSize="28sp" />
        <TextView
            android:id="@+id/babyDobDTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textColor="@color/textcolorlite"
            android:layout_toRightOf="@+id/babyDIV"
            android:layout_below="@+id/babyNameDTV"
            android:text="Ali Khan"
            android:textSize="16sp" />



    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lablesLV"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:layout_below="@+id/topRV"
        android:background="#000"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textcolorlite"
            android:layout_toRightOf="@+id/babyDIV"
            android:layout_below="@+id/babyNameDTV"
            android:text="Vaccine"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textcolorlite"
            android:layout_toRightOf="@+id/babyDIV"
            android:layout_below="@+id/babyNameDTV"
            android:text="Due Date"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/textcolorlite"
            android:layout_toRightOf="@+id/babyDIV"
            android:layout_below="@+id/babyNameDTV"
            android:text="Status"
            android:textSize="20sp" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/babyDetailsRecyclerViewID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lablesLV"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:padding="0dp"

        />

</RelativeLayout>