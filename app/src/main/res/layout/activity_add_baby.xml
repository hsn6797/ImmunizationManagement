<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/colorbackground"

    tools:context=".Activities.AddBabyActivity">

    <TextView
        android:id="@+id/titleTextTV"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Baby"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="@color/textcolorlite"

        android:textSize="28sp"
        android:textStyle="bold"
        />

    <LinearLayout
            android:id="@+id/liner1"
            android:layout_below="@+id/titleTextTV"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/babyIV"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_launcher_background" />

            <Button
                android:id="@+id/babyIVB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/colorbuttontext"
                android:text="Select Image" />
        </LinearLayout>

    <LinearLayout
            android:id="@+id/liner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/liner1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/babyNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textcolorlite"

                    android:text="Name"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/babyNameET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textcolorlite"

                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/babyDobB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@color/colorbuttontext"
                    android:text="Select DOB"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/babyDobTV"
                    android:layout_width="wrap_content"
                    android:textColor="@color/textcolorlite"
                    android:layout_height="wrap_content"
                    android:text="----"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/babyGenderTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="@color/textcolorlite"

                    android:textSize="20sp" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/babyGenderRG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/babyMaleRB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:buttonTint="@color/colorAccent"
                        android:textColor="@color/textcolorlite"
                        android:textSize="20sp"></RadioButton>

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/babyFemaleRB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:buttonTint="@color/colorAccent"
                        android:textColor="@color/textcolorlite"

                        android:textSize="20sp">

                    </RadioButton>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/babySaveB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@color/colorbuttontext"
                    android:textSize="18sp" />

            </LinearLayout>


        </LinearLayout>
</RelativeLayout>